.result-wrapper {
    display: flex;
    justify-content: center;
    align-items: flex-start;
    min-height: 100vh;
    padding: 2rem;
    font-family: 'Poppins', sans-serif;
    background: #f0f4f8
  }
  
  .result-card {
    width: 80%;
    background-color: #ffffff;
    padding: 2rem;
    border-radius: 12px;
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
    background: white;
    max-width: 800px;
  }
  
  .result-card h2 {
    color: #2e7d32;
    font-size: 2rem;
    margin-bottom: 1rem;
  }
  
  .result-card .summary {
    font-size: 1.25rem;
    color: #555;
    margin-bottom: 2rem;
  }
  
  .score-box {
    background-color: #a3cade;
    border-left: 5px solid #066481;
    padding: 1rem;
    margin-bottom: 2rem;
    font-size: 1.2rem;
    color: #2e7d32;
  }
  
  .review-section h4 {
    margin-bottom: 1rem;
    color: #1976d2;
  }
  
  .answer-review {
    margin-bottom: 1.5rem;
  }
  
  .question {
    font-weight: bold;
    margin-bottom: 0.3rem;
  }
  
  .user-answer {
    margin-bottom: 0.25rem;
  }
  
  .correct {
    color: #2e7d32;
    font-weight: bold;
  }
  
  .incorrect {
    color: #c62828;
    font-weight: bold;
  }
  
  .correct-answer {
    color: #1565c0;
  }
  
  hr {
    border: none;
    border-top: 1px solid #eee;
    margin: 1rem 0;
  }
  
  .btn-back {
    padding: 0.6rem 1.5rem;
    background-color: #e22c2c;
    color: white;
    font-weight: bold;
    border: none;
    border-radius: 6px;
    cursor: pointer;
    transition: background-color 0.2s ease-in-out;
  }
  
  .btn-back:hover {
    background-color: #1976d2;
  }
  .result-wrapper {
    padding: 2rem;
    font-family: 'Poppins', sans-serif;
  }
  
  .chat-message {
    border-left: 4px solid #2196f3;
    margin: 1rem 0;
    padding: 0.5rem 1rem;
    background: #f9f9f9;
    border-radius: 8px;
  }
  
  .correct {
    color: green;
    font-weight: bold;
    width: 50%;
  }
  
  .incorrect {
    color: red;
    font-weight: bold;
    width: 50%;
  }
  
  
  .result-card.correct {
    border-left: 6px solid #4caf50;
    background-color: #e8f5e9;
  }
  
  .result-card.wrong {
    border-left: 6px solid #f44336;
    background-color: #ffebee;
  }
  
  .question {
    font-weight: bold;
    margin-bottom: 0.5rem;
  }
  
  .options {
    list-style: none;
    padding-left: 0;
    margin-bottom: 0.5rem;
  }
  
  .options li {
    padding: 6px 10px;
    border-radius: 6px;
    margin-bottom: 4px;
  }
  
  .options li.selected {
    font-weight: bold;
    background-color: #cce5ff;
  }
  
  .options li.correct-answer {
    background-color: #d0f0c0;
  }
  
  .explanation {
    
      position: relative;
      right: 0px;
      width: 200px;
      border: 3px solid #73AD21;
      padding: 10px;
    
    font-style: italic;
    color: #555;
    margin-top: 6px;

    align-content: right;
  }

  .btn-nextlevel {
    padding: 0.6rem 1.5rem;
    background-color: #21b519;
    margin-right: 10px;
    color: white;
    font-weight: bold;
    border: none;
    border-radius: 6px;
    cursor: pointer;
    transition: background-color 0.2s ease-in-out;
  }
  .btn-restart:hover {
    background-color: #1976d2;
  }
  .btn-operations {
    padding: 0.6rem 1.5rem;
    background-color: #f17a24;
    color: white;
    font-weight: bold;
    border: none;
    border-radius: 6px;
    margin-right: 10px;
    cursor: pointer;
    transition: background-color 0.2s ease-in-out;
  }

  .result-buttons {
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    gap: 1rem;
    margin-top: 2rem;
  }
  
  .result-buttons button {
    padding: 0.6rem 1.2rem;
    border: none;
    border-radius: 8px;
    font-weight: bold;
    cursor: pointer;
    transition: background-color 0.3s;
  }
  
  .success-msg {
    color: green;
    font-weight: 600;
  }
  .retry-msg {
    color: #d32f2f;
    font-weight: 600;
  }
  .message-question {
    font-weight: bold;
    margin-bottom: 4px;
  }
  
  .message-user.correct {
    color: green;
  }
  
  .message-user.incorrect {
    color: red;
  }
  
  .message-correct {
    font-style: italic;
    margin-bottom: 4px;
  }
  
  .explanation {
    background: #f4f4f4;
    padding: 6px 10px;
    border-radius: 8px;
    margin-bottom: 1rem;
    width: 50%
  }
  .chat-message {
    margin-bottom: 1.5rem;
    padding: 1rem;
    background: #f9f9f9;
    border-radius: 8px;
    display: flex;
    flex-direction: column;
  }
  
  /* Flex row for question and explanation */
  .message-row {
    display: flex;
    justify-content: space-between;
    gap: 2rem;
  }
  
  /* Left column: Question + answer */
  .message-left {
    flex: 1;
  }
  
  /* Right column: Explanation */
  .message-right {
    flex: 1;
    display: flex;
    align-items: right;
    background-color: #eef4fc;
    padding: 1rem;
    border-left: 3px solid #1976d2;
    border-radius: 8px;
    font-style: italic;
    color: #333;
  }
  
  /* Answer styles */
  .message-user.correct {
    color: green;
    font-weight: bold;
  }
  
  .message-user.incorrect {
    color: red;
    font-weight: bold;
  }
  
  .message-correct {
    color: #333;
    margin-top: 0.3rem;
  }
  