<div class="result-wrapper">
    <div class="result-card">
      <h2>ğŸ‰ Quiz Completed!</h2>
      <p class="summary">Well done, {{ userName }}!</p>
  
      <div class="score-box">
        <h3 style="color:blue">Your Score</h3>
        <p style="color:blue">{{ score }} / {{ total }}</p>
        <div *ngIf="score === total">
          <div class="btn-nextlvel">
          <button style="background-color:rgb(129, 224, 46); color:white; margin-right: 10px" (click)="goToNextLevel()">â¡ï¸ Next Level</button>
          <button style="background-color:chocolate; color: white;" (click)="goHome()">ğŸ  Go to Different Module</button>
        </div>
        </div>
      </div>
      <div *ngIf="score < total">
        <button style="background-color:rgb(71, 132, 218); color: white;" (click)="retrySameLevel()">ğŸ” Try Again</button>
     
      </div>
      <p style="color:blue" 
      *ngIf="score === 10" class="success-msg">
        ğŸ‰ You completed this Level {{ level }}! Next Level is now unlocked.
      </p>
      
      <p *ngIf="score < 10" class="retry-msg">
        You scored {{ score }}/{{ total }}. Try again to unlock the next level.
      </p>
     
      
      <div class="chat-message" *ngFor="let q of questions; let i = index">
        <div class="message-question">
          <span class="q-index">Q{{ i + 1 }}:</span> {{ q.question || 'â“ No question found' }}
        </div>
      
        <div class="message-user" 
             [class.correct]="userAnswers[i] === q.correctValue"
             [class.incorrect]="userAnswers[i] !== q.correctValue">
          Your Answer: {{ userAnswers[i] || 'N/A' }}
        </div>
      
        <div *ngIf="userAnswers[i] !== q.correctValue" class="message-correct">
          âœ… Correct Answer: {{ q.correctValue || q.answer }}
        </div>
      
        <div class="explanation">
          ğŸ’¡ Explanation: {{ q.explanation || 'No explanation available.' }}
        </div>
      </div>

      <div class="result-buttons">
        <button style="background-color:rgb(129, 224, 46); color:white; margin-right: 10px" (click)="reviewQuiz()">ğŸ” Review Quiz</button>
      
        <button style="background-color:rgb(129, 224, 46); color:white; margin-right: 10px" *ngIf="score < 10" (click)="retrySameLevel()">âŒ Try Again</button>
      
        <button style="background-color:rgb(129, 224, 46); color:white; margin-right: 10px" *ngIf="score === 10" (click)="goToNextLevel()">âœ… Go to Next Level</button>
      </div>
      
    </div>
  </div>